{
    "editor.formatOnSave": false,
    "eslint.format.enable": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "[html]": {
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.formatOnSave": true
    },
    "files.useExperimentalFileWatcher": true,
    "files.exclude": {
        ".git": true,
        ".DS_Store": true,
        "node_modules": true,
        "tmp/**": true,
        "node_modules/**": true
    },
    "search.exclude": {
        "tmp/**": true,
        "node_modules/**": true,
        "node_modules": true
    },
    "files.watcherExclude": {
        "node_modules": true,
        "node_modules/**": true,
        "refactor": true,
        "refactor/**": true
    }
}
